= form_for @story do |f|
  -if @story.errors.any?
    .alert-message.block-message.error
      %h2= "Sorry, there appears to be errors on this form. Please correct the following errors and resubmit."
      %ul
        - @story.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    .clearfix
      = f.label :name
      .input
        = f.text_field :name, :placeholder => "Enter the name"
    .clearfix
      = f.label :description
      .input
        = f.text_area :description
    .clearfix
      = f.label :status
      .input
        = f.select :status, Story.status_options
    .clearfix
      = f.label :user_id, "Assignee"
      .input
        = f.select :user_id, Story.user_options
    .clearfix
      = f.label :points
      .input
        = f.select :points, Story.points_options
    .clearfix
      = f.label :priority
      .input
        = f.select :priority, Story.priority_options
    .actions
      = f.submit 'Save', :class => "btn primary"
      -if @story.persisted?
        = link_to 'Cancel', @story, :class => "btn"
      = link_to 'List', stories_path, :class => "btn"
