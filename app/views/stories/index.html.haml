.row
  .span17
    %h2 Current
    .stories
      - @stories.each do |story|
        .story
          %h3= story.name
          %pre.prettyprint
            = story.description
          %p.pull-right
            %span.label= story.status_text
          -#%td= story.user_id
          -#%td= story.points
          -#%td= story.priority
          %td= link_to 'Show', story
          %td= link_to 'Edit', edit_story_path(story)
          %td= link_to 'Destroy', story, :confirm => 'Are you sure?', :method => :delete
    = link_to 'New Story', new_story_path
  .span3
    %h2 Backlog
