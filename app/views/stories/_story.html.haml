- status_cls = "status-#{story.status}"
- user_cls = story.user_id ? "user-#{story.user_id}" : ""
%div{:class => "story #{status_cls} #{user_cls}"}
  %p{:class => "priority #{story.priority_text.downcase}", :title => "#{story.priority_text} priority"}
  %h3= link_to story.name, story
  %p.pull-right
    %span{:class => "label #{story.status}"}
      = story.status
      - if story.finished?
        at #{story.finished_at.strftime("%d/%m/%Y %H:%M")}
  .description
    = story.description_short
  -#%td= story.user_id
  -#%td= story.points