- status_cls = "status-#{story.status_text.downcase}"
- user_cls = story.user_id ? "user-#{story.user_id}" : ""
%div{:class => "story #{status_cls} #{user_cls}"}
  %h3= link_to story.name, story
  %p.pull-right
    %span{:class => "label #{story.status_text.downcase}"}= story.status_text
  .description
    = story.description_short
  -#%td= story.user_id
  -#%td= story.points
  -#%td= story.priority