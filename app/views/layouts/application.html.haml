!!! 5
%html{"xml:lang" => "en", :lang => "en"}
  %head
    %meta{"charset" => "utf-8"}
    %meta{"content" => "simple task manager on Rails", "name" => "description"}
    %meta{"content" => "Anton Kalyaev", "name" => "author"}
    %title SimpleTask manager on Rails
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          = link_to "SimpleTask manager on Rails", root_path, :class => 'brand'
          .nav-collapse
            %ul.nav
              %li= link_to "Home", root_path
              %li= link_to "Users", users_path
              %li= link_to "History", history_stories_path
              %li= link_to "Calendar", calendar_path
          %p.navbar-text.pull-right
            - if current_user
              Logged in as
              = current_user
              |
              = link_to "Log out", log_out_path
            - else
              = link_to "Log in", log_in_path

    .container-fluid
      - if notice
        .alert.alert-info
          %p= notice
      .row-fluid
        = yield
      %hr
      %footer
        %p &copy; My company 2011
